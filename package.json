{
  "name": "fsm",
  "version": "1.0.0",
  "description": "App for NLC Free School Meals",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-packager . --overwrite --platform darwin --arch x64 --out release-builds/",
    "build-windows": "electron-packager . --overwrite --platform win32 --arch x64 --out release-builds/",
    "create-installer": "electron-installer-windows --src release-builds/fsm-win32-x64/ --dest release-builds/installers/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AddJam/fsm-app.git"
  },
  "author": "Add Jam",
  "bugs": {
    "url": "https://github.com/AddJam/fsm-app/issues"
  },
  "homepage": "https://github.com/AddJam/fsm-app#readme",
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-installer-windows": "^2.0.0",
    "electron-packager": "^14.1.0"
  }
}
